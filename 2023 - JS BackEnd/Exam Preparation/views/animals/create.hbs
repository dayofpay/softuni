<main class="create">
    <section id="create">
        <div class="form">
            <h2>Add item</h2>
            <form class="create-form" method="POST" action="/animals/create">
                <input type="text" name="name" id="name" placeholder="Name" />
                <input type="number" name="years" id="years" placeholder="Years" />
                <input type="text" name="kind" id="kind" placeholder="Kind" />
                <input type="text" name="image" id="animal-img" placeholder="Image URL" />
                <input type="text" name="need" id="needs-of" placeholder="Needs of" />
                <input type="text" name="location" id="location" placeholder="Location" />
                <textarea id="description" name="description" placeholder="Description..."></textarea>
                <button type="submit">Post</button>
            </form>
        </div>
    </section>
</main>
